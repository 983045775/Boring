<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".music.mvp.view.LocalMusicActivity">

    <com.susion.boring.base.view.SToolBar
        android:transitionName="@string/transition_name_tool_bar"
        android:id="@+id/toolbar"
        app:showTitle="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.susion.boring.base.view.SToolBar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.susion.boring.base.view.LoadMoreRecycleView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.susion.boring.base.view.LoadMoreRecycleView>


        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:visibility="gone"
            android:id="@+id/refresh_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/refresh"
                android:src="@mipmap/music_loading"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/local_music_bt_start_scan"
                android:background="@drawable/bg_shape_corner_rectangle"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="扫描本地音乐"
                android:textColor="@color/white"
                android:layout_below="@id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </FrameLayout>



</LinearLayout>
