<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".music.activity.PlayMusicActivity"
    android:orientation="vertical"
    android:background="@mipmap/blur_play_music">

    <com.susion.boring.view.SToolBar
        android:layout_marginTop="@dimen/status_bar_height"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.susion.boring.view.SToolBar>

    <View
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/gradual_white"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


    <com.susion.boring.music.view.LyricView
        android:id="@+id/lyric_view"
        android:listSelector="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_has_play_time"
            android:layout_alignParentLeft="true"
            android:text="00:00"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="05:00"
            android:textColor="@color/white"
            android:id="@+id/tv_left_time"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.susion.boring.music.view.MediaSeekBar
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_has_play_time"
            android:layout_toLeftOf="@id/tv_left_time"
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:customThumb="@drawable/play_music_thumb"/>

    </RelativeLayout>


    <com.susion.boring.music.view.MusicPlayControlView
        android:layout_marginBottom="20dp"
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.susion.boring.music.view.MusicPlayControlView>


</LinearLayout>
