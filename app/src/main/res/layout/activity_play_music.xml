<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".music.activity.PlayMusicActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.susion.boring.view.SToolBar
            android:layout_marginTop="@dimen/status_bar_height"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.susion.boring.view.SToolBar>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ac_play_music_sdv_album"
            android:listSelector="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_has_play_time"
                android:layout_alignParentLeft="true"
                android:text="00:00"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="05:00"
                android:textColor="@color/red_font_divider"
                android:id="@+id/tv_left_time"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.susion.boring.music.view.MediaSeekBar
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/tv_has_play_time"
                android:layout_toLeftOf="@id/tv_left_time"
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:progressWidth="1.5dp"
                app:hasPlayColor="@color/topBarColor"
                app:originBackgroundColor="@color/red_divider"
                app:customThumb="@drawable/play_music_thumb"/>

        </RelativeLayout>

        <com.susion.boring.music.view.MusicPlayControlView
            android:layout_marginBottom="20dp"
            android:id="@+id/control_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </com.susion.boring.music.view.MusicPlayControlView>


    </LinearLayout>



</LinearLayout>
