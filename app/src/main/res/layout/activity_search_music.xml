<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.susion.boring.music.SearchMusicActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <com.susion.boring.view.SearchBar
        android:id="@+id/search_bar"
        android:transitionName="@string/transition_name_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.susion.boring.view.SearchBar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_view"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:id="@+id/place_holder_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/music_mutil_color"/>


                <TextView
                    android:textColor="@color/colorSecondaryText"
                    android:layout_marginBottom="15dp"
                    android:text="搜索支持 : 网易云音乐"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

            </RelativeLayout>




    </FrameLayout>

</LinearLayout>
