<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <com.susion.boring.view.SearchBar
             android:transitionName="@string/transition_name_search_bar"
             android:id="@+id/search_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         </com.susion.boring.view.SearchBar>

         <com.susion.boring.base.view.LoadMoreRecycleView
             android:id="@+id/list_view"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1">
         </com.susion.boring.base.view.LoadMoreRecycleView>
     </LinearLayout>

    <com.susion.boring.music.view.MusicControlPanel
        android:layout_gravity="bottom"
        android:id="@+id/music_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.susion.boring.music.view.MusicControlPanel>

</FrameLayout>