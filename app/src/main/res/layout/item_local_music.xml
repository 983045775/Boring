<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:layout_marginLeft="15dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:src="@mipmap/music_placeholder"
        android:id="@+id/item_local_music_iv_album_pic"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_width="45dp"
        android:layout_height="45dp" />


    <LinearLayout
        android:layout_toRightOf="@id/item_local_music_iv_album_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:text="绅士"
            android:textSize="16sp"
            android:id="@+id/item_local_music_tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/item_local_music_tv_music_name"
            android:textColor="@color/red_font_divider"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:paddingBottom="5dp"
            android:text="薛之谦-意外"
            android:maxLength="16"
            android:id="@+id/item_local_music_tv_artist_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageView
        android:id="@+id/item_local_music_iv_operator_list"
        android:layout_marginRight="15dp"
        android:src="@mipmap/play_operator_list"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/item_local_music_tv_duration"
        android:layout_marginRight="10dp"
        android:text="3:08"
        android:textSize="16sp"
        android:textColor="@color/red_font_divider"
        android:layout_toLeftOf="@id/item_local_music_iv_operator_list"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>