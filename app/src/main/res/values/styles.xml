<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>


    <declare-styleable name="MediaSeekBar">
        <attr name="hasPlayColor" format="color|reference"/>
        <attr name="originBackgroundColor" format="color|reference"/>
        <attr name="hasBufferColor" format="color|reference"/>
        <attr name="maxProgress" format="integer|reference"/>
        <attr name="progressWidth" format="dimension|reference"/>
        <attr name="customThumb"  format="reference"/>
        <attr name="canClickProgress"  format="boolean"/>
    </declare-styleable>


</resources>
